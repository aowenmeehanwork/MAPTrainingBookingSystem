#!/bin/bash√ü

passedTests=0

response=$(curl --write-out %{http_code} --silent --output /dev/null http://127.0.0.1:8001/)

if [ "$response" -eq 200 ]
	then
		echo "test passed, landing page is up"
		((passedTests+=1))
fi

